# perf regression gate knobs
: "${MACE_PERF_REGRESS_PCT:=20}"
: "${MACE_PERF_MAX_REGRESS_CASES:=0}"
: "${MACE_PERF_MIN_COMPARE_CASES:=6}"
: "${MACE_PERF_MIN_BASE_NS:=10000}"
: "${MACE_PERF_COMPARE_FILTERS:=Put/K16-V16/1,Put/K100-V1024/4,Get/K16-V16/1,Get/K100-V1024/4,Scan/K16-V16/1,Scan/K100-V1024/4}"

# criterion runtime knobs for CI
: "${MACE_PERF_BENCH_ARGS:=--noplot}"

# quick bench profile for branches that support env-driven perf bench settings
: "${MACE_BENCH_QUICK:=1}"
: "${MACE_BENCH_TOTAL_ITEMS:=20000}"
: "${MACE_BENCH_THREADS:=1,4}"
: "${MACE_BENCH_KV_CASES:=16:16,100:1024}"
: "${MACE_BENCH_PUT_MEAS_SECS:=5}"
: "${MACE_BENCH_GET_MEAS_SECS:=5}"
: "${MACE_BENCH_SCAN_MEAS_SECS:=5}"
: "${MACE_BENCH_SAMPLE_SIZE:=10}"
